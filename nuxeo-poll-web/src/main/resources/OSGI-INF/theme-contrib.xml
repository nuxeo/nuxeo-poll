<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.poll.ui.theme">

  <require>org.nuxeo.theme.nuxeo.default</require>
  <require>org.nuxeo.ecm.user.center.theme</require>
  <require>org.nuxeo.ecm.admin.center.theme</require>

  <!-- mapping between theme pages and resources -->
  <extension target="org.nuxeo.theme.styling.service" point="pages">

    <themePage name="galaxy/default">
      <styles append="true">
        <style>polls</style>
      </styles>
    </themePage>

    <themePage name="userCenter/default">
      <styles append="true">
        <style>polls</style>
      </styles>
    </themePage>

    <themePage name="admin/default">
      <styles append="true">
        <style>polls</style>
      </styles>
    </themePage>

  </extension>

  <!-- CSS path declaration -->
  <extension target="org.nuxeo.theme.styling.service" point="styles">

    <style name="polls">
      <src>themes/css/polls.css</src>
    </style>

  </extension>

</component>
