<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.poll.listeners">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
    point="listener">

    <listener name="updatePollStatusListener" async="false"
      postCommit="true" class="org.nuxeo.ecm.poll.listeners.UpdatePollStatusListener"
      priority="50">
      <event>documentCreated</event>
      <event>documentModified</event>
    </listener>

    <listener name="updateAllPollStatusListener" async="true"
      postCommit="false" class="org.nuxeo.ecm.poll.listeners.UpdateAllPollsStatusListener"
      priority="1">
      <event>updatePollsStatus</event>
    </listener>

  </extension>

</component>
